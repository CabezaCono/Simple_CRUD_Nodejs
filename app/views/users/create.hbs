<div class="row align-item-center justify-content-center">
  <div class="card col-sm-2 pt-4 mt-5">
    <div class="card-header bg-dark text-white">
      Crear Usuario
    </div>
    <div class="card-body">
      <form id="create-user" method="POST" action="/usuarios/store">
        <div class="form-group">
          <label for="email">Correo electr√≥nico</label>
          <input type="email" class="form-control" id="email">
        </div>
        <div class="form-group">
          <label for="name">Nombre</label>
          <input type="text" class="form-control" id="name">
        </div>
        <div class="form-group">
          <label for="surname">Apellido</label>
          <input type="text" class="form-control" id="surname">
        </div>
        <div class="form-group">
          <label for="second_surname">Segundo Apellido</label>
          <input type="text" class="form-control" id="second_surname">
        </div>
        <div class="form-group">
            <label for="role">Rol </label>
            <select class="form-control bg-dark text-white  " id="role">
              <option value="0">-</option>
              {{#each roles}}
              <option value="{{dataValues.name}}">{{dataValues.name}}</option>
              {{/each}}
            </select>
        </div>
        <input type="submit" class="btn btn-dark" value="Crear"/>
      </form>
    </div>
  </div>
</div>